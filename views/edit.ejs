<%- include('./partials/head.ejs') %>


<nav class="index-headers">
    <div class="index-title">
        <h1>Express Yourself</h1>
        <h4>Update Item</h5>
    </div>
    <div class="index-user">
        <ul>
            <li>
                <form method="post" action="/logout">
                <input type="submit" value="Logout" class="logout"/></form>
            </li>
            <li><a href="/vintage">Home</a></li>
            <li> User: <%= name.username %></li>
        </ul>
   
    </div>
</nav>
<div class="edit-container">


<form action="/vintage/edit/<%= vintage._id %>?_method=PUT" enctype="multipart/form-data" method="post">
    <div class="form-container">

        <h3><%= vintage.title %></h3>


      <label for="title"></label>
      <input
        type="text"
        name="title"
        id="title"
        value="<%= vintage.title %>"
        required
      />
    
      <label for="price"></label>
      <input
        type="text"
        name="price"
        id="price"
        value="<%= vintage.price %>"
        required
      />
    
        <label for="style"></label>
        <input
          type="text"
          name="style"
          id="style"
          value="<%= vintage.style %>"
          required
        />
      
        <label for="brand"></label>
        <input
          type="text"
          name="brand"
          id="brand"
          value="<%= vintage.brand %>"
        />
      
        <label for="era"></label>
        <input
          type="text"
          name="era"
          id="era"
          value="<%= vintage.era %>"
        />
      
        <label for="description"></label>
        <textarea name="description" id="description" placeholder="<%= vintage.description %>"></textarea>
     
    <label for="image"></label>
    <input type="file" name="image" id="image">
    
    <input type="submit" value="Edit Item" id="edit-btn"/>
    
    </div>
  </form>

  <div class="image-div">
    <img src="<%=vintage.imageURL %>" id="edit-img" alt="image">
</div>
</div>
<%- include('./partials/foot.ejs') %>
    
